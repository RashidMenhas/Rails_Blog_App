<% content_for :title, "#{@user.name}'s Posts"%>
<%= render "posts/user_post", post: @post %>
<div class= "post-comments">
  <% @post.comments.each do |comment| %>
    <div class="post-comment">
      <p>
        <span><strong><%= comment.author.name%></strong></span>
        <span><%= comment.text %></span>
      </p>
    </div>
  <% end %>
</div>
<div class='comment-container'>
<%= form_with model: @comment, url: user_post_comments_path(post_id: @post) do |f|  %>
  <div class = "comment-section">
    <%= f.text_area :text, placeholder: "Add Comment" %>
  </div>
   <%= f.submit "Comment", class:'btn-comment'%>
<% end %>
</div>
